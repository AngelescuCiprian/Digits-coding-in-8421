#include <iostream>

using namespace std;

int main()
{
    int cifra, cod[4],i,copieCifra;
    cout<<"Introduceti cifra care doriti sa fie transformata in 8421: ";
    cin>>cifra;
    copieCifra=cifra;
    for(i=3;i>=0;i--)
    {
        cod[i]=cifra%2;
        cifra/=2;
    }
    cout<<"Codificare "<<copieCifra<<" in 8421 : ";
    for(i=0;i<=3;i++)
        cout<<cod[i];


    return 0;
}
